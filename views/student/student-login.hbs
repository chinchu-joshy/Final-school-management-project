<section class="student-login">
<div class="container">
    <div class="row">
        <div class="col-md-12">
             <div id="login">
                 <a href="/student-entry" class="btn btn-primary otp-position">SEND OTP</a>
                 {{#if payerId}}

        <h3 class="text-center text-white pt-5">Your Transaction is completed<br>Please Login to continue</h3>
        {{else}}
        <h3 class="text-center text-white pt-5">Please Login to continue</h3>
        {{/if}}
        
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
