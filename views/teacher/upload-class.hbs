<div class="container">
    <div class="row">
        
            <div class="col-md-6 upload-box">
       <form class="background-form vc" action="/student-class" method="post" enctype="multipart/form-data">
       <div class="form-group">
    <label class="heading"for="">Type Heading</label>
    <input type="text" class="form-control" name="head" required >
   
  </div>
  <div class="form-group" >
    <label  class="heading"for="">Upload Video</label>
    <input type="file" class="form-control"  name="upload"  >
    
  </div>
  <button type="submit" class="btn btn-success mt-4" > Submit</button>
  </form> 
  
    </div>
    <div class="col-md-12 ml-5 tab-class">

    
    <table class="table mt-5 ml-2">
      <thead class="table-design" >
    <tr >
      
      
      
        <th scope="col"class="student-details">Topic</th>
        <th scope="col"class="student-details">Date</th>
       <th scope="col"class="student-details">View</th>
       
       
    </tr>
  </thead>  
    <tbody>
   
        {{#each video}}
        <tr>
     
       <td class="student">{{this.main}}</td>
      
      
    
   
     
       <td class="student">{{this.date}}</td>
      
      
    <td>
      
       <a class="open-pdf" href="/video/{{this._id}}.mp4"><i class="fas fa-video"></i></a>
    </td>
    </tr>
   {{/each}}
    </tbody>
    </table>
    </div>
    
     
        
    </div>
</div>